{% extends 'base.html.twig' %}

{% block title %}
    Blog | Création d'un article
{% endblock %}

{% block body %}

    <h1 class="fst-italic text-center my-4">Création d'un article</h1>

    <form method="post">
        <div class="mb-3">
            <lavel for="titre" class="form-label">Titre</lavel>
            <input type="text" class="form-control" id="Titre" name="titre">
        </div>
        <div class="mb-3">
            <lavel for="contenu" class="form-label">Contenu</lavel>
            <textarea class="form-control" name="contenu" id="contenu" rows="15"></textarea>
        </div>
        <div class="mb-3">
            <lavel for="image" class="form-label">Image</lavel>
            <input type="text" class="form-control" id="image" name="image">
        </div>
            <button type="submit" class="btn btn-dark mb-5">Enregistrer</button>
    </form>

{% endblock %}